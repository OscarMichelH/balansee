<p id="notice"><%= notice %></p>

<h1>Liabilities</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Debt</th>
      <th>Payment</th>
      <th>Departure date</th>
      <th>Frequency</th>
<!--      <th>Category</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @liabilities.each do |liability| %>
      <tr>
        <td><%= liability.name %></td>
        <td><%= liability.description %></td>
        <td><%= liability.debt %></td>
        <td><%= liability.payment %></td>
        <td><%= liability.departure_date %></td>
        <td><%= liability.frequency %></td>
<!--        <td><%#= liability.category&.title %></td>-->
        <td>
          <%= link_to liability do %>
            <i class="fas fa-eye"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_liability_path(liability) do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to liability, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>Total Liabilities</td>
      <td></td>
      <td><%= @total_debt %></td>
      <td><%= @total_payment %></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>

<br>

