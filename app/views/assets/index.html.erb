<p id="notice"><%= notice %></p>

<h1>Assets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Value</th>
      <th>Income</th>
      <th>Income Date</th>
      <th>Frequency</th>
<!--      <th>Category</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.name %></td>
        <td><%= asset.description %></td>
        <td><%= asset.value %></td>
        <td><%= asset.income %></td>
        <td><%= asset.incoming_date %></td>
        <td><%= asset.frequency %></td>
<!--        <td><%#= asset.category&.title %></td>-->
        <td>
          <%= link_to asset do %>
            <i class="fas fa-eye"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_asset_path(asset) do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to asset, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Asset', new_asset_path, class: 'btn btn-dark' %>
